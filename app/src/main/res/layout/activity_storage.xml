<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Encabezado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        android:padding="16dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Almacenar"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>
    </LinearLayout>

    <!-- Barra Gris -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E0E0E0"
        android:padding="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="agregar contenido"
            android:textColor="#000000"
            android:textSize="16sp"/>
    </LinearLayout>

    <!-- Cuerpo: Tres Campos de Texto -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <EditText
            android:id="@+id/nombre_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:textColor="#000000"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#FFFFFF"
            android:cornerRadius="8dp"/>

        <EditText
            android:id="@+id/marca_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Marca"
            android:textColor="#000000"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#FFFFFF"
            android:cornerRadius="8dp"/>

        <EditText
            android:id="@+id/cantidad_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cantidad"
            android:textColor="#000000"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:backgroundTint="#FFFFFF"
            android:cornerRadius="8dp"/>
    </LinearLayout>

    <!-- Pie: BotÃ³n Guardar -->
    <Button
        android:id="@+id/guardar_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="#4CAF50"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:backgroundTint="#4CAF50"
        android:cornerRadius="8dp"/>

</LinearLayout>